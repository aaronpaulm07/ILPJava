package com.ilp.service;

import java.util.Scanner;

import com.ilp.entity.Product;

public class ServiceService {
	public static Service createService() {
		// TODO Auto-generated method stub
		
		Scanner scanner = new Scanner(System.in);
		System.out.println("enter price :");
		double price = scanner.nextDouble();
		Service service = new Service("001","P1",price);
		return service ;
	}

	public static void displayService(Service service) {
		// TODO Auto-generated method stub
		System.out.println("product no : " +service.getServiceId() + "   Product name:"+service.getServiceName()+"     ProductPricee:"+ service.getServicePrice());
	
}
